RewriteEngine On

# Set the base URL (adjust this based on your installation)
RewriteBase /CineGorkha/public/

# Redirect all requests to index.php except for existing files
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php?url=$1 [QSA,L]

# Set headers for assets
<FilesMatch "\.(css|js|png|jpg|jpeg|gif|ico|mp4|webm)$">
    Header set Cache-Control "max-age=2592000, public"
</FilesMatch>